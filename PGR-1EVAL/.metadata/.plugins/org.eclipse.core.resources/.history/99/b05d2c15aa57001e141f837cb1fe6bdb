package principal;

import java.util.Scanner;

public class Principal {

	public static void main(String[] args) {
		
		Scanner sc=new Scanner(System.in);
		
		String opc;
		
		
		
		do {
			System.out.println("introduce la opcion de menu"); 
			opc=sc.nextInt();
			
			System.out.println("Opcion 1");
			System.out.println("Opcion 2");
			System.out.println("Opcion 3");
			System.out.println("Para salir ponga 's'");
			
			
			if(opc=="1") {
				System.out.println("Clickaste 1");
			}else if(opc=="2") {
				System.out.println("Clickaste 2");
			}else if(opc=="3") {
				System.out.println("Clickaste 3");
			}
			
			System.out.println("Esto es la opcion Salir");
			
			
		}while(opc>=1 && opc<=3);
		
		

	}

}
